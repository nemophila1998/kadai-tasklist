<h1>Tasklist</h1>

<% if @tasks.any? %>

<table class = "table">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
　　<tbody>
  
<% @tasks.each do |task| %>

    <tr>
        <td>
<%= link_to task.id, task %>
        </td>
        <td>
<%= task.status %>
        </td>
        <td>
<%= task.content %>
        </td>
    </tr>
  
<% end %>
     </tbody>
</table>

<div>
<%= paginate @tasks %>
</div>
<% end %>

<%= link_to 'タスクの追加', new_task_path, class: "btn btn-primary" %>
